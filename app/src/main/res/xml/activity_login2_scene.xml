<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start_login">
        <Constraint
            android:id="@+id/cl"
            android:layout_width="335dp"
            android:layout_height="403dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end_login">
        <Constraint
            android:id="@+id/cl"
            android:layout_width="335dp"
            android:layout_height="403dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>
    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/end_login"
        app:constraintSetStart="@+id/start_login"
        app:motionInterpolator="linear" app:transitionFlags="disableIntraAutoTransition"
        app:duration="500">

    </Transition>
</MotionScene>